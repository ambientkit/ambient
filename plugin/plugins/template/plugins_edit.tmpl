<h1>{{.title}}</h1>
<form method="POST" class="post-form">
    <input type="hidden" name="token" value="{{.token}}">
        {{if .plugins }}
            {{range $name, $p := .plugins}}
            <p>
                <h3>{{$name}}</h3>
                <label for="id_{{$name}}">Enable:</label>
                <input type="checkbox" name="{{$name}}" id="id_{{$name}}" {{if .Enabled}}checked{{end}}>
                <span class="helptext">
                <a href="/dashboard/plugins/{{$name}}/grants">Grants</a>
                {{if .Settings}}<a href="/dashboard/plugins/{{$name}}/settings">Settings</a>{{end}}
                </span>
            </p>
            {{end}}
            <button type="submit" class="save btn btn-default">Save</button>
        {{else}}
        <p>
            <span>
                <i>
                    No plugins.
                </i>
            </span>
        </p>
        {{end}}
</form>