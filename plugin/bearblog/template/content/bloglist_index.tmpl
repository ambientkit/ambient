{{if .query}}
<h3 style="margin-bottom:0">Filtering for "{{.query}}"</h3>
<small>
    <a href="/blog">Remove filter</a>
</small>
{{end}}
<content>
    <ul class="blog-posts">
        {{if .posts }}
            {{range $p := .posts}}
            <li>
                <span>
                    <i>
                        <time datetime="{{.Timestamp | bearblog_Stamp}}" pubdate>
                            {{.Timestamp | bearblog_StampFriendly}}
                        </time>
                    </i>
                </span>
                <a href="/{{.URL}}">{{.Title}}</a>
            </li>
            {{end}}
        {{else}}
        <li>
            <span>
                <i>
                    No posts yet.
                </i>
            </span>
        </li>
        {{end}}
    </ul>
</content>